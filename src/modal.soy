{namespace Templates.Modal}

/**
 * This renders my main element.
 */
{template .element}
    <div class="modal-dialog">
      <div class="modal-content">
        {delcall Modal.header data="all" /}
        {delcall Modal.body data="all" /}
        {delcall Modal.footer data="all" /}
      </div>
    </div>
    {delcall Tooltip}
      {param ref: 'tooltip' /}
      {param data: [ 'content': 'Modal' ] /}
    {/delcall}
{/template}

/**
 */
{template .body}
    {@param bodyContent:?}
    <div class="modal-body">
        <p>{$bodyContent}</p>
    </div>
{/template}

/**
 */
{template .header}
    {@param headerContent:?}
    <div class="modal-header" onmouseover="handleMouseOver" onmouseout="handleMouseOut">
        <h4 class="modal-title">{$headerContent}</h4>
    </div>
{/template}

/**
 */
{template .footer}
  {@param footerButtons:?}
  <div class="modal-footer" onclick="handleButtonClick">
    {delcall Toolbar}
      {param data: [] /}
      {param ref: 'toolbar' /}
      {param children kind="html"}
        {foreach $button in $footerButtons}
          {delcall Button}
            {param data: $button /}
            {param ref: 'button' + index($button) /}
          {/delcall}
        {/foreach}
      {/param}
    {/delcall}
  </div>
{/template}
